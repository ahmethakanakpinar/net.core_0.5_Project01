@using EntityLayer.Concrete
@model List<Experience>

<div class="section px-3 px-lg-4 pt-5" id="experience">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Deneyimlerim</h2>
        </div>
        <div class="row">
            @{
                int i = 0; string second = "";
                string sayi = "";
            }
            @foreach (var item in Model)
            {
                second = (i % 2 == 0) ? "left" : "right";
                sayi = (i % 2 == 0) ? "100" : "300";
                <div class="col-md-6">
                    <div class="card mb-3" data-aos="fade-@second" data-aos-delay="@sayi">
                        <div class="card-header px-3 py-2">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h3 class="h5 mb-1">@item.Name</h3>
                                    <div class="text-muted text-small">@item.CompanyName <small>(@item.Date)</small></div>
                                </div><img src="@item.ImageUrl" width="48" height="48" alt="@item.Name" />
                            </div>
                        </div>
                        <div class="card-body px-3 py-2">
                            <p>@item.Description</p>
                        </div>
                    </div>
                </div>
                i++;
            }
        </div>
    </div>
</div>