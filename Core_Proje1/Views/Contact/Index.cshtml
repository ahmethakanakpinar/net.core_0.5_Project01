@using EntityLayer.Concrete
@model List<Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Projelerim</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Mail </th>
                            <th> Gönderen Adı Soyadı </th>
                            <th> Gönderen Mail Adresi</th>
                            <th> Mail Mesajı</th>
                            <th> Başlangıç Tarihi </th>
                            <th> Durum </th>
                            <th> İşlem </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/images/file-icons/64/003-interface.png" alt="image" />
                                </td>
                                <td> @item.Name </td>
                                <td> @item.Mail </td>
                                <td>@item.Content</td>
                                <td>@item.Date</td>
                                <td>@item.Status</td>
                                <td>
                                    <a href="/Contact/DeleteMessage/@item.MessageID" class="btn btn-outline-danger btn-icon-text">
                                        Sil <i class="mdi mdi-delete btn-icon-prepend"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
              
            </div>
        </div>
    </div>
</div>

