@using EntityLayer.Concrete
@model List<Feature>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count == 0)
                    {
                        <div class="alert alert-light text-center">
                            <p>Burada herhangi bir veri bulunamamaktadır. Eklemek için <a href="/Feature/AddFeature">Tıklayınız</a></p>
                        </div>
                    }
                    else
                    {
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th> # </th>
                                    <th> Ilk kısım </th>
                                    <th> Adı </th>
                                    <th> Başlık </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td> @item.FeatureID </td>
                                        <td> @item.Header </td>
                                        <td> @item.Name </td>
                                        <td> @item.Title </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br>
                        <button type="button" class="btn btn-inverse-secondary btn-fw">Güncelle</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>