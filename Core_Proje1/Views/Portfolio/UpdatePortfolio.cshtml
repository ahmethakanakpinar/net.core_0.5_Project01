@model EntityLayer.Concrete.Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdatePortfolio", "Portfolio", FormMethod.Post))
{
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <form class="forms-sample">
                        <div class="form-group">
                            <label>ID</label>
                            @Html.TextBoxFor(x => x.PortfolioID, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Proje Adı</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Resim1 URL</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Resim2 Url</label>
                            @Html.TextBoxFor(x => x.ImageUrl2, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Proje URL</label>
                            @Html.TextBoxFor(x => x.ProjectUrl, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Resim1</label>
                            @Html.TextBoxFor(x => x.Image1, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Resim2</label>
                            @Html.TextBoxFor(x => x.Image2, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Resim3</label>
                            @Html.TextBoxFor(x => x.Image3, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Resim4</label>
                            @Html.TextBoxFor(x => x.Image4, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Platform</label>
                            @Html.TextBoxFor(x => x.Platform, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Durum</label>
                            @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Tarih</label>
                            @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                        <a href="/Portfolio" class="btn btn-dark">İptal</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

