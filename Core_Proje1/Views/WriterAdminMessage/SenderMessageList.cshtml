@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "SenderMessageList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Giden Mesajlar</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Mail </th>
                            <th> Alıcı Adı Soyadı </th>
                            <th> Alıcı Mail Adresi</th>
                            <th> Mail Başlık</th>
                            <th> Mail Mesajı</th>
                            <th> Gönderme Tarihi </th>
                            <th> İşlem </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/images/file-icons/64/003-interface.png" alt="image" />
                                </td>
                                <td> @item.ReceiverName </td>
                                <td> @item.Receiver </td>
                                <td> @item.Subject</td>
                                <td>@item.MessageContent.Substring(0, Math.Min(item.MessageContent.Length, 20))...</td>
                                <td>@(((DateTime)item.Date).ToString("dd MMM yyyy"))</td>
                                <td><a href="#" class="btn btn-outline-primary" data-toggle="modal" data-target="#WriterAdminMessage_@item.WriterMessageID">Detaylar</a></td>
                                <td>
                                    <a href="/WriterAdminMessage/DeleteMessage/@item.WriterMessageID" class="btn btn-outline-danger btn-icon-text">
                                        Sil <i class="mdi mdi-delete btn-icon-prepend"></i>
                                    </a>
                                </td>
                            </tr>
                            <!-- Modal -->
                            <div class="modal fade" id="WriterAdminMessage_@item.WriterMessageID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Detaylar</h5>
                                        </div>
                                        <div class="modal-body">
                                            <span>@item.MessageContent</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

