@model UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil</h4>
            <p class="card-description">
                Profil kısmınızı buradan düzenleyebilirsiniz.
            </p>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName">İsim</label>
                    <input type="text" asp-for="Name"  class="form-control" id="exampleInputName" placeholder="İsim">
                </div>
                <div class="form-group">
                    <label for="exampleInputSurname">Soyisim</label>
                    <input type="text" asp-for="Surname" class="form-control" id="exampleInputSurname" placeholder="Soyisim">
                </div>
                <div class="form-group">
                    <label for="exampleInputOldPassword">Eski Şifre</label>
                    <input type="password" asp-for="OldPassword" class="form-control" id="exampleInputOldPassword" placeholder="Password">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword">Şifre</label>
                    <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword" placeholder="Password">
                </div>
                <div class="form-group">
                    <label for="exampleInputRepeatPassword">Şifre Tekrar</label>
                    <input type="password" asp-for="PasswordConfirm" class="form-control" id="exampleInputRepeatPassword" placeholder="Password">
                </div>
                <div class="form-group">
                    <label>Resim Seç</label>
                    <input type="file" asp-for="Picture" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Yükle</button>
                        </span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>
@section ExtraScripts {
    <!-- Plugin js for this page -->
    <script src="~/skydash/vendors/typeahead.js/typeahead.bundle.min.js"></script>
    <script src="~/skydash/vendors//select2/select2.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- Custom js for this page-->
    <script src="~/skydash/js/file-upload.js"></script>
    <script src="~/skydash/js/typeahead.js"></script>
    <script src="~/skydash/js/select2.js"></script>
    <!-- End custom js for this page-->
}
